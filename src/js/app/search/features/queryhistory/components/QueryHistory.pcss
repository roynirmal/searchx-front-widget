    .banner {
        cursor: pointer;
    }

    .list {
        height: 100%;
        overflow-y: scroll;

        .item {
            margin-right: 5px;
            padding: 0;


            a {
                margin-left: 5px;
                color: $description-grey;
            }

            a, a:hover, a:focus {
                text-decoration: none;
            }

            .text {
                font-size: 15px;
                margin-left: 10px;
            }
        }
    }
    * {
  scrollbar-width: 7px;
  scrollbar-color: rgba(0, 0, 0, .5);
}
    
            *::-webkit-scrollbar {
            -webkit-appearance: none;
             width: 7px;
        }
        *::-webkit-scrollbar-thumb {
        border-radius: 4px;
        background-color: rgba(0, 0, 0, .5);
        -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5);
}
    


}